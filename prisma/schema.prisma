// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  securityStamp String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  product_id      String     @id @default(uuid())
  product_name    String
  product_price   Float
  product_stock   Int
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  categories_id   String
  categories      Categories @relation(fields: [categories_id], references: [categories_id])
}

model Categories {
  categories_id     String    @id @default(uuid())
  categories_name   String    @unique
  products          Product[] // relasi balik (optional tapi bagus)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
